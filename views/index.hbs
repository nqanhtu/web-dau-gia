
{{#section 'script'}}
<script>
	{{#each top4MostBiddedProducts}}
	$("#counter-{{product_id}}0")
	.countdown('{{end_time}}', function(event) {
		$(this).text(event.strftime('%D day(s) %H:%M:%S'));
	})
	.on('finish.countdown', function(event) {
	$(this).html('Expired!')
		.parent().addClass('disabled')
	});
	{{/each}}

	{{#each top4MostHighestPriceProducts}}
	$("#counter-{{product_id}}00")
	.countdown('{{end_time}}', function(event) {
		$(this).text(event.strftime('%D day(s) %H:%M:%S'));
	})
	.on('finish.countdown', function(event) {
	$(this).html('Expired!')
		.parent().addClass('disabled')
	});
	{{/each}}

	{{#each top4MostNearEndProducts}}

	<div class="container-fluid"  style="margin-top: 24px;">
		<div class="row">
			<div class="col-md-3">
				<div class="profile-sidebar">
					<!-- SIDEBAR USERPIC -->
					<div class="profile-userpic">
						<img src="http://sv1.upsieutoc.com/2017/06/25/tai-anh-gai-xinh-cho-iphone-7-2.jpg" class="img-responsive" alt="">
					</div>
					<!-- END SIDEBAR USERPIC -->
					<!-- SIDEBAR USER TITLE -->
					<div class="profile-usertitle">
						<div class="profile-usertitle-name">
							{{user.full_name}}
						</div>
						<div class="profile-usertitle-dob"> 
							Tổng điểm: {{user.rate_counter}}
						</div>
					</div>
					<!-- SIDEBAR MENU -->
					<div class="profile-usermenu">
						<ul class="nav">
							{{{_sections.profilemenu}}}
						</ul>
					</div>
					<!-- END MENU -->
				</div>	

				<div class="panel panel-info class panel-personal">
					<div class="panel-heading">
						Auction Personal Management
					</div>
					<div class="list-group">
						{{{_sections.auctionmenu}}}
					</div>
				</div>		
			</div>
			{{{body}}}
		</div>
	</div>	


	<footer class="footer-distributed">
		<div class="footer-left">
			<h3>BOP<span>Team</span></h3>
			<p class="footer-links">

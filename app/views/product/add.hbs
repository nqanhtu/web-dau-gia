<!DOCTYPE html>
<html>
<head>
	<meta charset="utf-8">
	<meta name="viewport" content="width=device-width, initial-scale=1.0">

	<title>Add Product</title>

	<link rel="stylesheet" type="text/css" href="../css/bootstrap.min.css">
	<link rel="stylesheet" type="text/css" href="../css/bootstrap-theme.min.css">

    <style>
        .panel-margin {
            margin-top: 50px!important
        }
    </style>
</head>
<body>
    <div class="container panel-margin">
        <div class="row">
            <div class="col-md-6 col-md-offset-3">
                <div class="panel panel-default">
                    <div class="panel-heading">Add a product to database</div>
                    <div class="panel-body">
                        <form action="/product/add" method="post" id="frmAddProduct">

                            <div class="form-group">
                                <label for="productName">Product name:</label>
                                <input type="text" class="form-control" name="productName" minlength="6" required>
                            </div>

                            <div class="form-group">
                                <label for="startPrice">Category:</label>
                                <select class="form-control" name="category">
                                    {{#each categories}}
                                    <option value="{{id}}">{{name}}</option>
                                    {{/each}}
                                </select>
                            </div>                            

                            <div class="form-group">
                                <label for="startPrice">Start price:</label>
                                <input type="number" class="form-control" name="startPrice" minlength="3" required>
                            </div>

                            <div class="form-group">
                                <label for="startPrice">Step price:</label>
                                <input type="number" class="form-control" name="stepPrice" minlength="3" required>
                            </div>

                            <div class="form-group">
                                <label for="startPrice">Price:</label>
                                <input type="number" class="form-control" name="price" minlength="4" required>
                            </div>

                            <div class="form-group">
                                <label for="duration">Duration:</label>
                                <select class="form-control" name="duration">
                                    <option value="1">Interval 1 day</option>
                                    <option value="7">Interval 7 day</option>
                                    <option value="13">Interval 13 day</option>
                                </select>
                            </div>

                            <div class="form-group">
                                <label for="seller">Seller:</label>
                                <select class="form-control" name="user_picked">
                                    {{#each userList}}
                                    <option value="{{id}}">{{full_name}}</option>
                                    {{/each}}
                                </select>
                            </div>

                            <div class="form-group">
                                <label for="mainImage">Image url:</label>
                                <input type="text" class="form-control" name="mainImage" minlength="13" required>
                            </div>
                            <div class="form-group">
                                <input type="text" class="form-control" name="image1" minlength="13" required>
                            </div>
                            <div class="form-group">
                                <input type="text" class="form-control" name="image2" minlength="13" required>
                            </div>

                            <div class="form-group">
                                <label for="mainThumbnail">Thumbnail url:</label>
                                <input type="text" class="form-control" name="mainThumbnail" minlength="13" required>
                            </div>
                            <div class="form-group">
                                <input type="text" class="form-control" name="thumbnail1" minlength="13" required>
                            </div>
                            <div class="form-group">
                                <input type="text" class="form-control" name="thumbnail2" minlength="13" required>
                            </div>

                            <button style="width:100%;" type="submit" class="btn btn-success center-block btn-lg">ADD PRODUCT</button>
                        </form>
                    </div>
                </div>
            </div>
        </div>
    </div>

</body>

<!-- Latest compiled and minified JavaScript -->
<script type="text/javascript" src="../js/jquery-3.2.1.min.js"></script>
<script type="text/javascript" src="../js/bootstrap.min.js"></script>
<script type="text/javascript" src="../js/jquery.validate.min.js"></script>
<script>
    $('#frmAddProduct').validate();

    $duration = explode("_", $_POST['duration']);
    $duration_value = $duration[0];
    $duration_name = $duration[1];

    $user_picked = explode("_", $_POST['user_picked']);
    $user_picked_value = $user_picked[0];
    $user_picked_name = $user_picked[1];

    $category = explode("_", $_POST['category']);
    $category_value = $category[0];
    $category_name = $category[1];
</script>

</html>

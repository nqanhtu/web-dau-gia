<!DOCTYPE html>
<html>

<head>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">

    <title>Register</title>

    <link rel="stylesheet" type="text/css" href="css/bootstrap.min.css">
    <link rel="stylesheet" type="text/css" href="css/bootstrap-theme.min.css">
    <!-- Custom css -->
    <link rel="stylesheet" type="text/css" href="css/sign_in_out.css">
</head>

<body>

    <!-- Register form -->
    <div class="container">
        <div class="mainbox col-md-6 col-md-offset-3 col-sm-8 col-sm-offset-2">
            <div class="panel panel-primary">
                <div class="panel-heading">
                    <div class="panel-title">Register</div>
                </div>
                <div class="panel-body">

                    <!-- Main form -->
                    <form action="" id="frmRegister" class="form-horizontal" method="post">

                        <!-- Email input -->
                        <div class="form-group">    
                            <label for="email" class="col-md-3 control-label">Email</label>
                            <div class="col-md-9">
                                <input type="text" class="form-control" name="email" placeholder="username@yopmail.com">
                            </div>
                        </div> <!-- Email input -->

                        <!-- Full name input -->
                        <div class="form-group">
                            <label for="name" class="col-md-3 control-label">Full name</label>
                            <div class="col-md-9">
                                <input type="text" class="form-control" name="name" placeholder="Nguyễn Văn A">
                            </div>
                        </div> <!-- Full name input -->

                        <!-- Password input -->
                        <div class="form-group">
                            <label for="password" class="col-md-3 control-label">Password</label>
                            <div class="col-md-9">
                                <input type="password" class="form-control" name="password" placeholder="*******">
                            </div>
                        </div> <!-- Password input -->

                        <!-- Address -->
                        <div class="form-group">
                            <label class="control-label col-md-3" for="mobile">Address</label>
                            <div class="col-md-9">
                                <input type="text" class="form-control" name="address" placeholder="Thành phố Hồ Chí Minh">
                            </div>
                        </div> <!-- Address -->                    
                        <!-- Accept button -->
                        <div class="form-group">
                            <div class="col-md-offset-3 col-md-6">
                                <button type="sumbit" class="btn btn-success center-block btn-lg">Accept</button>
                            </div>
                        </div> 
                        <!-- Accept button -->

                    </form> <!-- Main form -->

                </div>
            </div>
        </div>
    </div> <!-- Register form -->

</body>

<!-- Latest compiled and minified JavaScript -->
<script type="text/javascript" src="js/jquery-3.2.1.min.js"></script>
<script type="text/javascript" src="js/bootstrap.min.js"></script>
<script type="text/javascript" src="js/jquery.validate.min.js"></script>
<script src='https://www.google.com/recaptcha/api.js'></script>
<script>
    $('#frmRegister').validate({
        rules: {
            email: {
                required: true,
                email: true
            },
            name: {
                required: true,
                minlength: 2
            },
            password: {
                required: true,
                minlength: 6
            },
            address: {
                required: true,
                minlength: 2
            }
        },

        messages: {
            email: {
                required: 'Please input the email.',
                email: 'Email invalidate'
            },
            name: {
                required: 'Please input your real name',
                minlength: 'Name must at least 2 characters'
            },
            password: {
                required: 'Password is required field',
                minlength: 'Password must at least 6 characters'
            },
            address: {
                required: 'Please provide your current address',
                minlength: 'Address must at least 2 characters'
            }
        },

        errorElement: 'span',
        errorClass: 'help-block',

        hightlight: function(element) {
            $(element).closest('.form-group')
                .addClass('.has-error');
        },

        success: function(label) {
            $(label).closest('.form-group')
                .removeClass('.has-error');

            label.remove();
        },
    });
</script>

</html>
<!DOCTYPE html>
<html>

<head>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">

    <title>Register</title>

    <link rel="stylesheet" type="text/css" href="css/bootstrap.min.css">
    <link rel="stylesheet" type="text/css" href="css/bootstrap-theme.min.css">
    <!-- Custom css -->
    <link rel="stylesheet" type="text/css" href="css/sign_in_out.css">
</head>

<body>
    <div class="container">
        <div id="login" class="mainbox col-md-6 col-md-offset-3 col-sm-8 col-sm-offset-2">
            <div class="panel panel-primary">
                <div class="panel-heading">
                    <div class="panel-title">
                        Login
                    </div>
                </div>
                <div class="panel-body">
                    <div class="alert alert-danger col-sm-12"></div>
                    <form id="loginform" class="form-horizontal" role="form" method="post" action="login">
                        <div class="input-group">
                            <span class="input-group-addon">
                                <i class="glyphicon glyphicon-user"></i>
                            </span>
                            <input type="email" class="form-control" name="email" value="" placeholder="Email" minlength="6" required>
                        </div>
                        <div class="input-group">
                            <span class="input-group-addon">
                            <i class="glyphicon glyphicon-lock"></i>
                        </span>
                            <input type="password" class="form-control" name="password" placeholder="Mật khẩu" minlength="6" required>
                        </div>
                        <div class="input-group">
                            <div class="checkbox">
                                <label>
                                    <input type="checkbox" name="remember" value=""> Remember me
                                </label>
                            </div>
                        </div>
                        <div>
                            <!-- Button -->
                            <button class="btn btn-success center-block" type="submit">Login</button>
                        </div>
                        <div class="form-group">
                            <div class="col-md-12 control">
                                <div style="border-top: 2px solid#4682B4; padding-top:15px; font-size:85%">
                                    Do not have an account?
                                    <a href="register" class="">
                                            Register now!
                                        </a>
                                </div>
                            </div>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</body>
    <!-- Latest compiled and minified JavaScript -->
    <script type="text/javascript" src="js/jquery-3.2.1.min.js"></script>
    <script type="text/javascript" src="js/bootstrap.min.js"></script>
    <script type="text/javascript" src="js/jquery.validate.min.js"></script>
    <script src='https://www.google.com/recaptcha/api.js'></script>
    <script>
            $('#loginform').validate();
    </script>
</html>


